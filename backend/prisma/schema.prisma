generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(dbgenerated())
  password String
  name     String
  email    String    @unique
  phone    String    @unique
}

model Lab {
  id         String    @id @default(dbgenerated())
  lab_name   String     @unique
  owner_name String
  phone      String    @unique
  email      String    @unique
  password   String
  license_no String    @unique
  gst_no     String    @unique
  address    String
  city       String
  state      String
  pincode    String
  labTests   LabTest[]
}

model Tests {
  id              String    @id @default(dbgenerated())
  test_name       String    @unique
  test_description String
  labTests        LabTest[]
}

model LabTest {
  lab_id    String
  lab_name  String
  test_id   String
  test_price      String
  test_name String
  test_description String
  lab       Lab      @relation(fields: [lab_id], references: [id], onDelete: Cascade)
  test      Tests    @relation(fields: [test_id], references: [id], onDelete: Cascade)
  @@id([lab_id, test_id]) 
}